<h2>Grams (g) to Ounces (oz)</h2>
<p></p>
<label>Gram(s)</label>
<input type="number" @bind-value="@Grams" @bind-value:event="oninput" />
<span>=</span>
<input type="number" @bind-value="@Ounces" @bind-value:event="oninput" />

<label>Ounce(s)</label>

@code {
    double grams = 1;
    double ounces = 0.035274;

    public double Grams
    {
        get => grams;
        set
        {
            ounces = value / 28.35;
            grams = value;
        }
    }

    public double Ounces
    {
        get => ounces;
        set
        {
            grams = value * 28.35;
            ounces = value;
        }
    }
}

