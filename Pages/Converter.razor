<h2>Cups to Mililiter (ml)</h2>
<p></p>
<label>Cup(s)</label>
<input type="number" @bind-value="@Cups" @bind-value:event="oninput" />
<span>=</span>
<input type="number" @bind-value="@Mililiter" @bind-value:event="oninput" />

<label>Mililiter(s)</label>

@code {
    double cups = 1;
    double mililiter = 236.588;

    public double Cups
    {
        get => cups;
        set
        {
            mililiter = value * 237;
            cups = value;
        }
    }

    public double Mililiter
    {
        get => mililiter;
        set
        {
            cups = value / 237;
            mililiter = value;
        }
    }
}


