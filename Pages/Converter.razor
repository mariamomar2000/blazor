@page "/converter"

<h1>Measurements Converter</h1>
<p></p>
<p>To convert your measurements put the number you wish to convert in it's current measurement and it will automaticall convert to it's oposing measurement.</p>
<p></p>
<h2>Celcius (°C) to Fahrenheit (°F)</h2>
<p></p>
<label>Celcius</label>
<input type="number" @bind-value="@Celcius" @bind-value:event="oninput" />
<span>=</span>
<input type="number" @bind-value="@Fahrenheit" @bind-value:event="oninput" />

<label>Fahrenheit</label>

@code {
    double celcius = 0;
    double fahrenheit = 32;

    public double Celcius
    {
        get => celcius;
        set
        {
            fahrenheit = (value * 9 / 5) + 32;
            celcius = value;
        }
    }

    public double Fahrenheit
    {
        get => fahrenheit;
        set
        {
            celcius = (value - 32) * 5 / 9;
            fahrenheit = value;
        }
    }
}

