<h2>Kilograms (kg) to Pounds (lb)</h2>
<p></p>
<label>Kilogram(s)</label>
<input type="number" @bind-value="@Kilograms" @bind-value:event="oninput" />
<span>=</span>
<input type="number" @bind-value="@Pounds" @bind-value:event="oninput" />

<label>Pound(s)</label>

@code {
    double kilograms = 1;
    double pounds = 2.20462;

    public double Kilograms
    {
        get => kilograms;
        set
        {
            pounds = value * 2.205;
            kilograms = value;
        }
    }

    public double Pounds
    {
        get => pounds;
        set
        {
            kilograms = value / 2.205;
            pounds = value;
        }
    }
}



